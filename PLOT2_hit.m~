function PLOT2_hit(yh, record_club, iname)

hit = zeros(size(yh));

for i = 1:1:size(hit,1)
    hit(i,:) = yh(i,:) ./ mean(yh(i,:),2);
end

N = size(record_club);

for i = 1:1:N
    figure(size(record_club)+i)
        p1 = plot(hit);
        set(p1,'Color','grey')
        legend(iname)
    hold on
        p2 = plot(hit(record_club{i}));
        set(p2,'Color','red')
        legend(iname{record_club{i}})
        title(sprintf('Hit of Convercenge Club %g', i));
    hold off
end